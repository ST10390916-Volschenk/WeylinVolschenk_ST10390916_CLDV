@{
    ViewData["Title"] = "My Work";
    var userID = ViewData["UserID"];
    var products = ViewData["products"] as List<ST10390916_CLDV_POE.Models.Product>;
}

<div class="text-center">
    <h1 class="display-4" style="font-family:Buttershine Serif">My work</h1>
    <p>Products you are currently selling.</p>
    
</div>

<div>

    <form asp-action="AddProduct" asp-controller="Product" method="">
        <button type="submit" name="btnSubmit">Add new product</button>
    </form>

</div>

<div class="table-bordered">

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>R @product.Price</td>
                    <td>@product.Category</td>
                    <td>@product.Availability</td>
                </tr>
            }
        </tbody>
    </table>
</div>
