@{
    ViewData["Title"] = "Shop";
    var userID = ViewData["userID"];
    var products = ViewData["products"] as List<ST10390916_CLDV_POE.Models.Product>;
}

<div class="text-center">
    <h1 class="display-4" style="font-family:Buttershine Serif">Shop</h1>
</div>

<div class="table-bordered">

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Availability</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>R @product.Price</td>
                    <td>@product.Category</td>
                    <td>@product.Availability</td>
                    <td>
                        <form asp-controller="Product" asp-action="Shop" method="post">
                            <input type="hidden" name="ClientID" value="@userID" />
                            <input type="hidden" name="ProductID" value="@product.ProductID" />
                            <input type="hidden" name="OrderDate" value="@DateTime.Now" />
                            <input type="hidden" name="OrderProcessed" value="false" />
                            <button type="submit">Place Order</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>